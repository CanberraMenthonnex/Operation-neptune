{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "type-check": {},
    "build": {
      "outputs": ["dist/**"]
    },
    "format": {
      "inputs": ["src/**/*.{ts,tsx}"]
    },
    "format:check": {
      "inputs": ["src/**/*.{ts,tsx}"]
    },
    "lint": {
      "inputs": ["src/**/*.{ts,tsx}"]
    }
  }
}
